#executable: school
#rules: all
#variables: CC(compiler), SRC(.c files), OBJ(.o files), NAME(executable)
#The all rule should recompile only the updated source files
#You are not allowed to have a list of all the .o files

CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

